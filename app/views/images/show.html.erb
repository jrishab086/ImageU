<div class="container">
    <h1>Image Details</h1>
    <div class="card">
        <%= image_tag @image.file.variant(resize: "600x600") %>
        <div class="card-body card-body d-flex justify-content-center align-items-center">
            <%= button_to "Delete", image_path(@image), method: :delete, class: "btn btn-danger btn-block" %>
        </div>
        <div class="card-body card-body d-flex justify-content-center align-items-center">
            <%= link_to 'return to the Image listing', images_path, class: "btn btn-primary mt-3" %>
        </div>
    </div>
</div>
